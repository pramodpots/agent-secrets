<!DOCTYPE html>
<html>

<head>
    <title>Upload Story</title>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!--Internal Style Sheet-->
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <!--Socket IO-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> <!-- Jquery -->

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="javascripts/uploadreport.js"></script>
    <script src="/javascripts/database.js" type="module"></script>
    <script src="/javascripts/app.js"></script>
</head>

<body>
    <% include ./navbar.ejs %>
        <div class="container" style="margin-top: 10%">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <h1 class="text-center">Upload Report</h1>
                    <p class="text-center"> Upload your new <kbd>REPORT</kbd> here</p>
                    <form class="uploadReport" onsubmit="return false;">
                        <div class="form-group row p-2">
                            <label class="col-form-label col-lg-4 text-muted" for="name"> Report title </label>
                            <div class="col-lg-8">
                                <input class="form-control" type="text" id="title" name="name">
                            </div>
                        </div>

                        <div class="form-group row p-2">
                            <label class="col-form-label col-lg-4 text-muted" for="name"> Author name </label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="author" name="name">
                            </div>
                        </div>

                        <div class="form-group row p-2">
                            <label class="col-form-label col-lg-4 text-muted" for="name"> Description </label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="description" name="name">
                            </div>
                        </div>

                        <div class="form-group row p-2">
                            <label class="col-form-label col-lg-4 text-muted" for="name">Image Upload Type</label>
                            <div class="col-lg-8">
                                <div class="row p-2">
                                    <div class="col-lg-4 p-2">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" id="url" name="image_type"
                                                checked="checked" value="url" onclick="hideFolderUploadMenu()">
                                            <label class="form-check-label text-muted" for="">
                                                URL
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 p-2">
                                        <input class="form-check-input" type="radio" id="folder" name="image_type"
                                            value="folder" onclick="hideURLUploadMenu()">
                                        <label class="form-check-label text-muted" for="">
                                            Device
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="form-group row p-2">
                            <label class="col-form-label col-lg-4 text-muted" for="image_url" for="name"> Type </label>
                            <div class="col-lg-8 ">
                                <div class="custom-file">
                                    <input type="file" id="img_folder" class="custom-file-input" name="img"
                                        accept="image/*">
                                </div>
                                <input type="text" class="form-control" id="image_url" name="image_url">
                            </div>

                        </div>
                        <div class="row mt-4"></div>
                        <div class="form-group row p-2">
                            <div class="col-3"></div>
                            <button class="btn btn-info col-6" onclick="uploadreport()">Upload report</button>
                            <div class="col-3"></div>
                        </div>
                    </form>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
</body>

</html>